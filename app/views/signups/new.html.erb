<h1>CS169 Project Signup Form</h1>
<%= form_tag(signups_path) do %>
  <div>
    <%= link_to 'See all groups', groups_path %>
  </div>

  <div class="field">
    <%= label_tag 'group_id', 'Group Number:' %>
    <%= select_tag 'group_id', options_from_collection_for_select(@groups, 'id', 'select_name') %>
  </div>

  <div>
    <%= link_to 'See all Projects', projects_path %>
  </div>

  <p>
    We encourage you to pick external projects over your own. Please only
    select an internal project if you were the group that proposed it to us.
    Internal projects have been approved under the condition that you find an
    external, non-technical customer to work with.
  </p>

  <% %w[First Second Third].each do |ordinal| %>
    <div class="field">
      <%= label_tag "#{ordinal.downcase}_choice", "#{ordinal} Choice:" %>
      <%= select_tag "#{ordinal.downcase}_choice", options_from_collection_for_select(@projects, 'id', 'title') %>
    </div>
  <% end %>

  <% if false %>
  <div class="field">
    <div> This is not implemented yet </div>
    <%= label_tag "sid", "SID:" %>
    <%= text_field_tag "sid" %>
  </div>
  <% end %>

  <div class="field">
    <%= submit_tag 'Submit' %>
  </div>
<% end %>
